{
  "name": "kiosk-backlight",
  "build": {
    "context": "..",
    "dockerfile": "Dockerfile"
  },
  "workspaceFolder": "/workspace",
  "features": {},
  "mounts": [
    "source=${env:HOME}/.gitconfig,target=/home/vscode/.gitconfig,type=bind,consistency=cached",
    "source=${env:HOME}/.profile,target=/home/vscode/.profile,type=bind,consistency=cached",
    "source=${env:HOME}/.ssh,target=/home/vscode/.ssh,type=bind,consistency=cached",
    "source=${env:HOME}/.vimrc,target=/home/vscode/.vimrc,type=bind,consistency=cached",
    "source=${localWorkspaceFolder},target=/workspace,type=bind"
  ],
  "remoteUser": "vscode",
  "postCreateCommand": "shellcheck --version && shfmt --version && bats -v",
  "customizations": {
    "vscode": {
      "settings": {
        "terminal.integrated.defaultProfile.linux": "zsh",
        "terminal.integrated.profiles.linux": {
          "zsh": {
            "path": "/bin/zsh"
          }
        },
        "editor.tabSize": 2,
        "files.eol": "\n",
        "shellcheck.enable": true,
        "[shellscript]": {
          "editor.defaultFormatter": "foxundermoon.shell-format"
        }
      },
      "extensions": [
        "timonwong.shellcheck",
        "foxundermoon.shell-format",
        "mads-hartmann.bash-ide-vscode",
        "github.vscode-github-actions",
        "yzhang.markdown-all-in-one",
        "ms-python.python",
        "eamodio.gitlens"
      ]
    }
  }
}